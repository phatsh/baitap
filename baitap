#include<iostream>

using namespace std;

int main() {
     int a[4][4];
     for (int i=0;i<4;i++){
         for (int j=0;j<4;j++)
         {
             cout << "a["<<i <<"["<<j<<"] = ";
             cin >> a [4][4] ;
         }
     }
     for (int i=0;i<4;i++){
         for (int j=0;j<4;j++){
             cout << a[i][j] << " ";
         }
         cout << endl;
     }
     cout << "tong duong cheo :" << a[0][0] + a[1][1] + a[2][2] +a[3][3] ;

     return 0;

}
